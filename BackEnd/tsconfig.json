{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "removeComments": true,
      "typeRoots": ["./src/@types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "node_modules/@types"],
    "exclude": ["node_modules"]
}